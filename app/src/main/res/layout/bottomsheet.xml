<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/ivBottomProductImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        tools:src="@drawable/ic_family_guy"/>

    <!--<TextView
        android:id="@+id/tvTransparent"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/ivProductImage"
        tools:text="@string/hello_blank_fragment"
        android:background="@android:color/transparent"/>-->

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCar"
        android:layout_marginLeft="10dp"
        tools:text="Product Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvStreetAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductName"
        android:layout_alignLeft="@+id/tvProductName"
        android:layout_marginTop="5dp"
        tools:text="Street Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tvCityAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStreetAddress"
        android:layout_alignLeft="@+id/tvStreetAddress"
        android:layout_marginTop="5dp"
        tools:text="City Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/ivBottomProductImage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-28dp"
        android:src="@drawable/car_collapsed"/>

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="5 min"
        android:layout_below="@+id/ivCar"
        android:layout_alignLeft="@+id/ivCar"
        android:layout_alignRight="@+id/ivCar"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="gone"
        tools:text="Medium Text"
        android:layout_below="@+id/tvAddress"
        android:layout_alignLeft="@+id/tvAddress"
        android:layout_alignStart="@+id/tvAddress"
        android:layout_marginTop="5dp" />
</RelativeLayout>